<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Asset Request Form</title>
    <link rel="stylesheet" href="../main.css" />
  <link rel="icon" href="https://ryryfn.com/ryryprofile.jpg">
   <script src="../transition.js" type="text/javascript"></script>
</head>
<body>
 <div id="main">
    <div class="banner" style="background-size: cover; background-repeat: no-repeat; width: 100%; height: 250px; background-image: url(&quot;filterImages/slurpy.png&quot;);"></div>
<div class="banner2" style="background-size: contain; background-repeat: no-repeat; background-position:center; width: 900px; height: 250px; background-image: url('https://ryryfn.com/websiteLogo.png'); position: absolute; top:8px"></div>
    <ul class="menu">
      <li><a href="/">Home</a></li>
      <li><a href="../request" class="active">Request</a></li>
	  <li><a href="../assets"><span>Assets</span></a></li>
      <li><a href="../upload"><span>Upload Asset</span></a></li>
     <li><a href="../dashboard"><span>Dashboard</span></a></li>
    </ul>

  <h1>Asset Request Form</h1>

  <form id="assetRequestForm" action="/request" method="POST" style="max-width: 600px; margin: auto;">
  <fieldset style="margin-bottom: 30px; padding: 20px;">
    <legend>Asset Request Details</legend>

    <div style="margin-bottom: 15px;">
      <label for="name" style="display: block; margin-bottom: 5px;">Asset Name</label>
      <input type="text" id="name" name="name" placeholder="Enter asset name" required style="width: 100%;">
    </div>

    <div style="margin-bottom: 15px;">
      <label for="description" style="display: block; margin-bottom: 5px;">Description / Details</label>
      <textarea id="description" name="description" placeholder="Enter asset details or requests" required style="width: 100%; height: 80px;"></textarea>
    </div>

    <div style="margin-bottom: 15px;">
      <label for="imageUrl" style="display: block; margin-bottom: 5px;">Image URL</label>
      <input type="text" id="imageUrl" name="imageUrl" placeholder="Paste Google drive share link here" style="width: 100%;">
    </div>
  </fieldset>

  <button type="submit" style="padding: 10px 20px;">Submit Request</button>
</form>

<h2>See what others are requesting</h2>
 <div class="asset-grid" id="asset-grid">
    <% requests.forEach(request => { %>
  <a class="asset-card">
    <img class="asset-img" src="https://ryryfn.com/<%= request.imageUrl %>" alt="<%= request.name %>">
    <span class="asset-name"><%= request.name %></span>
    <span class="asset-category"><strong>Description:</strong> <%= request.description ||  "No description." %></span>
  </a>
<% }) %>


    </div>

</div>
</body>
</html>
